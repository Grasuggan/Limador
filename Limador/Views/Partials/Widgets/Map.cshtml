@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Map>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Igloo.Extensions
@{
	var googleMapsAPIKey = Umbraco.AssignedContentItem.Settings().General.GoogleMapsApikey;
}

@if(!Model.ShowContentNextToMap){
	<section class="map map--@(Model.MapHeight)">	
	
		<div class="map__canvas" 
		    data-lat="@(Model.Latitude)" 
		    data-long="@(Model.Longitude)" 
		    data-zoom="@(Model.MapDefaultZoom)" 
		    data-pin="@(Model.CustomMapPinIcon != null ? Model.CustomMapPinIcon.Url : "no")">
		</div>
		
	</section>
}
else{
	var order = (int)ViewData["order"];
	
	var textColorClass = Model.TextColor == "ffffff" ? "light-color" : ""; 
	
	var openingHours = Model.OpeningHours;
	
	var backgroundColorClass = "white-bg-lock";
	if(Model.BackgroundColor != ""){
	    switch(Model.BackgroundColor)
    	{
    		case "ffffff":
    			backgroundColorClass = "white-bg-lock";
    			break;  
    		case "000000":
    			backgroundColorClass = "dark-bg-lock";
    			break; 
    		case "eeeeee":
    			backgroundColorClass = "gray-bg-lock";
    			break;  
    		default:
    		    backgroundColorClass = "theme-bg-lock";
    		    break;
    	}
	}
	
	<section class="map map--@(Model.MapHeight) map--split" id="@(order == 0 ? "content" : "")">

		<div class="map__content @(backgroundColorClass) @(textColorClass)">
		
			<div class="map__content-inner">

			    @if(Model.PreHeading != ""){
					<h6 class="pre-head">@Model.PreHeading</h6>
				}
				@if(Model.Heading != ""){
					if(order == 0){
						<h1>@Model.Heading</h1>
					}
					else{
						<h2>@Model.Heading</h2>
					}
				}
				@if(Model.Text.ToString() != ""){
					@Model.Text
				}
                
                <address>
    				<ul class="contact-list">
    					@if(Model.Address != ""){
    						<li>
    							<i class="fa fa-map-marker" aria-hidden="true"></i>
    							@Html.Raw(Model.Address.Replace("\n", "<br/>"))
    						</li>
    					}
    					@if(Model.PhoneNumber != ""){
    						<li>
    							<a href="tel:@(Model.PhoneNumber)"><i class="fa fa-phone" aria-hidden="true"></i> @Model.PhoneNumber</a>
    						</li>
    					}
    					@if(Model.Email != ""){
    						<li>
    							<a href="mailto:@(Model.Email)"><i class="fa fa-envelope" aria-hidden="true"></i> @Model.Email</a>
    						</li>
    					}						
    				</ul>
				</address>
				
				@if(openingHours != null && openingHours.Any()){
					<ul class="opening-hours">
						@foreach (OpeningHour openingHour in openingHours){
							<li>
								<span class="time">@openingHour.Time</span>
								<span class="day">@openingHour.Day</span>
							</li>
						}
					</ul>
				}

				@if(Model.Buttons != null && Model.Buttons.Any()){
                    <div class="button-wrap">
                        @foreach(var button in Model.Buttons){
                            @Html.Partial("/Views/Partials/Widgets/RenderButton.cshtml", button)
                        }
                    </div>
                }

			</div>
			
		</div>
		
		<div class="map__canvas" 
		    data-lat="@(Model.Latitude)" 
		    data-long="@(Model.Longitude)" 
		    data-zoom="@(Model.MapDefaultZoom)" 
		    data-pin="@(Model.CustomMapPinIcon != null ? Model.CustomMapPinIcon.Url : "no")">
		</div>

	</section>
}
<script src="//maps.googleapis.com/maps/api/js?key=@(googleMapsAPIKey)"></script>
		
			