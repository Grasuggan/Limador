@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.InstagramFeed>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Igloo.Extensions
@{
	var instagramUsername = Umbraco.AssignedContentItem.Settings().General.InstagramUsername;
	var instagramUserID = Umbraco.AssignedContentItem.Settings().General.InstagramUserID;
	var instagramAccessToken = Umbraco.AssignedContentItem.Settings().General.InstagramAccessToken;
	var removeImageBorder = Model.RemoveImageBorder ? "gallery--no-border" : "";

	var order = (int)ViewData["order"];

	var backgroundColorClass = "white-bg-lock";
	if(Model.BackgroundColor != ""){
	    switch(Model.BackgroundColor)
    	{
    		case "ffffff":
    			backgroundColorClass = "white-bg-lock";
    			break;  
    		case "000000":
    			backgroundColorClass = "dark-bg-lock";
    			break;   
    		case "eeeeee":
    			backgroundColorClass = "gray-bg-lock";
    			break;  
    		default:
    		    backgroundColorClass = "theme-bg-lock";
    		    break;
    	}
	}
	
    var containerWidthClass = "";
    switch(Model.ContainerWidth)
	{
		case "small":
			containerWidthClass = "container container--small";
			break;  
		case "standard":
			containerWidthClass = "container";
			break;  
		case "big":
			containerWidthClass = "container container--big";
			break;  
		case "full width":
			containerWidthClass = "";
			break;  
	}
	
	var imageWidthClass = "25 col-m-50";
	
	if(Model.ImageWidth != null){
    	var imageWidth = Model.ImageWidth.Replace("%", "");
    	
    	switch(imageWidth)
    	{
    	    case "10":
    	        imageWidthClass = "10 col-m-20";
    	        break;
    	    case "16":
    	        imageWidthClass = "16 col-m-33";
    	        break; 
    	    case "20":
    	        imageWidthClass = "20 col-m-33 col-s-50";
    	        break;  
    	    case "25":
    	        imageWidthClass = "25 col-m-50";
    	        break;     
    	    case "33":
    	        imageWidthClass = "33 col-m-50";
    	        break;       
    	    case "50":
    	        imageWidthClass = "50 col-m-100";
    	        break;   
    	}
	}

	
}

<section class="gallery-simple @(backgroundColorClass) @(removeImageBorder)" id="@(order == 0 ? "content" : "")">
	<div class="@(containerWidthClass)">
		<div class="row row--flat gallery-instagram" id="instafeed" 
		    data-token="@(instagramAccessToken)" 
		    data-user="@(instagramUserID)" 
		    data-username="@(instagramUsername)" 
		    data-count="@(Model.NumberOfImages)" 
		    data-link="@(Model.LinkImages ? 1 : 0)" 
		    data-icon="@(Model.LinkToInstagramAccount ? 1 : 0)" 
		    data-imagewidth="@(imageWidthClass)">	
		</div>
	</div>
</section>